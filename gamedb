package main
import "database/sql"
import "sort"
import "strings"
type db struct {
	type game struct {
		name string
		platform string
		relaseYear int
		developer string
		publisher string

	}
	var games []game
	var curGames []game
	string sortType
	func init() {
		games = make([]game, 0)
		curGames = make([]game, 0)
		sortType = "name"
	}
	func changeSort(newSort string) {
		sortType = newSort
	}
	func addGame(name string, platform string, releaseYear int, developer string, publisher string) {
		games = append(games, game{name, platform, releaseYear, developer, publisher})
	}
	func sort() {
		if sort == "name" {
			sort.Slice(games, func(i, j int) bool {
				return games[i].name > games[j].name
			})
		} else if sort == "platform" {
			sort.Slice(games, func(i, j int) bool {
				return games[i].platform > games[j].platform
			})
		} else if sort == "releaseYear" {
			sort.Slice(games, func(i, j int) bool {
				return games[i].releaseYear > games[j].releaseYear
			})
		} else if sort == "developer" {
			sort.Slice(games, func(i, j int) bool {
				return games[i].developer > games[j].developer
			})
		} else if sort == "publisher" {
			sort.Slice(games, func(i, j int) bool {
				return games[i].publisher > games[j].publisher
			})
		}
	}
	func search(string item) {
		curGames = nil
		for _, v := range games {
			if strings.Contains(v.name, item) || strings.Contains(v.platform, item) || strings.Contains(v.developer, item) || strings.Contains(v.publisher, item) {
				curGames = append(curGames, v)
			}
		}

	}

}